<h1>Search Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Content</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
  <.form let={f} for={@conn} method={"get"} action={Routes.post_path(@conn, :index)}>
    <%= search_input f, :title %>
    <%= error_tag f, :title %>

    <div>
      <%= submit "Search" %>
    </div>
  </.form>
<%= for post <- @posts do %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.subtitle %></td>
      <td><%= post.content %></td>

      <td>
        <span><%= link "Show", to: Routes.post_path(@conn, :show, post) %></span>
        <span><%= link "Edit", to: Routes.post_path(@conn, :edit, post) %></span>
        <span><%= link "Delete", to: Routes.post_path(@conn, :delete, post), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Post", to: Routes.post_path(@conn, :new) %></span>
